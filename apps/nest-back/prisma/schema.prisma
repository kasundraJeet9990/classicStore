generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Banner {
  banner_uid  String   @id @default(uuid())
  banner_image String
  banner_alt   String
  banner_link  String
  is_enabled   Boolean @default(true)
  start_at     BigInt
  end_at       BigInt
  created_at   BigInt 
  updated_at   BigInt 

  BannerClicks BannerClick[]
}

model BannerClick {
  banner_clicks_uid String   @id @default(uuid())
  banner_uid       String
  user_uid          String 
  clicked_at        BigInt 

  Banner Banner @relation(fields: [banner_uid], references: [banner_uid], onDelete: Cascade)

  @@index([banner_uid])
}